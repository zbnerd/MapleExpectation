{
  "dashboard": {
    "id": null,
    "title": "Maple Expectation Business Metrics",
    "tags": ["maple", "business", "metrics"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Cache Hit Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(maple_cache_hits_total[10m]) / (rate(maple_cache_hits_total[10m]) + rate(maple_cache_misses_total[10m])) * 100",
            "legendFormat": "{{cache_type}} Hit Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "green", "value": 0}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Cache Metrics",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(maple_cache_hits_total[5m])",
            "legendFormat": "Hits {{cache_type}}"
          },
          {
            "expr": "rate(maple_cache_misses_total[5m])",
            "legendFormat": "Misses {{cache_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "cps"
          }
        }
      },
      {
        "id": 3,
        "title": "Nexon API Request Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(nexon_api_requests_total[5m])",
            "legendFormat": "{{api_endpoint}} {{status}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        }
      },
      {
        "id": 4,
        "title": "Nexon API Error Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(nexon_api_requests_total{status=~\"5..\"}[5m]) / rate(nexon_api_requests_total[5m]) * 100",
            "legendFormat": "Error Rate {{api_endpoint}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Circuit Breaker States",
        "type": "stat",
        "targets": [
          {
            "expr": "resilience4j_circuitbreaker_state_total",
            "legendFormat": "{{name}} {{state}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"options": {"open": {"text": "OPEN"}}, "type": "value"},
              {"options": {"closed": {"text": "CLOSED"}}, "type": "value"},
              {"options": {"half-open": {"text": "HALF-OPEN"}}, "type": "value"}
            ]
          }
        }
      },
      {
        "id": 6,
        "title": "Equipment Processing Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(maple_equipment_processed_total[5m])",
            "legendFormat": "Processed"
          },
          {
            "expr": "rate(maple_equipment_failed_total[5m])",
            "legendFormat": "Failed"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "cps"
          }
        }
      },
      {
        "id": 7,
        "title": "Cube Trial Statistics",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(maple_cube_trials_total[5m])",
            "legendFormat": "{{cube_type}} Trials"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "cps"
          }
        }
      },
      {
        "id": 8,
        "title": "Sync Queue Size",
        "type": "stat",
        "targets": [
          {
            "expr": "maple_sync_queue_size",
            "legendFormat": "{{queue_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 500},
                {"color": "red", "value": 1000}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "User Activity",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(maple_user_requests_total[5m])",
            "legendFormat": "{{user_type}} Requests"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}