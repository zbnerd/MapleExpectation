# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================
# Database Configuration
# ============================================
# Root password for MySQL (must match application-local.yml)
DB_ROOT_PASSWORD=your_secure_root_password_here

# Database schema name
DB_SCHEMA_NAME=maple_expectation

# ============================================
# Security Keys (MUST be strong secrets in production)
# ============================================
# JWT secret key (minimum 32 characters, use random string)
JWT_SECRET=your_jwt_secret_key_minimum_32_characters

# Fingerprint secret for HMAC-SHA256
FINGERPRINT_SECRET=your_fingerprint_secret_key_here

# ============================================
# External API Keys
# ============================================
# Nexon Open API key (get from https://api.nexon.com)
NEXON_API_KEY=your_nexon_api_key_here

# ============================================
# Integration Services
# ============================================
# Discord webhook URL for alerts (optional)
# IMPORTANT: Variable name must match application.yml: alert.discord.webhook-url
ALERT_DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url

# ============================================
# Bootstrap Admin
# ============================================
# Comma-separated list of admin fingerprints for initial setup
# Generate via: POST /api/admin/admins after first deployment
ADMIN_FINGERPRINTS=

# ============================================
# System Configuration
# ============================================
# Timezone setting
TZ=Asia/Seoul

# ============================================
# Monitoring & Observability (Optional)
# ============================================
# Grafana admin credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_password_here

# OpenAI API key (for AI SRE features, optional)
OPENAI_API_KEY=your_openai_api_key_here
